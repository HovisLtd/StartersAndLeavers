                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Edit" class="btn btn-success" />
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
