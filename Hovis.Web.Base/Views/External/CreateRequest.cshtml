@model Hovis.Web.Base.Models.t_Servicedesk_Contact
<style>
    #container .modal-body {
        max-height: 50px;
    }
</style>
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.RequestorsName)
    @Html.HiddenFor(model => model.RequestConfirmed)
    @Html.HiddenFor(model => model.RequestDate)

    <div class="content-wrap">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="tab-content ">
                    <section class="tab-pane active" id="elements">
                        <form>
                            <div class="row">
                                <div class="col-lg-12">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <section class="panel panel-primary">
                                        <header class="panel-heading">1. Requestor</header>
                                        <div class="panel-body">
                                            @if (ViewBag.Status == "Success")
                                            {
                                                <div class="alert alert-success">
                                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                    <strong>Success</strong>
                                                    Your support request has been Created!
                                                </div>
                                            }
                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-sm-3">
                                                        @Html.LabelFor(model => model.DateFirstRequested)
                                                        <div class="input-group mg-b-md input-append date datepicker" data-date="@DateTime.Now.ToString("dd/MM/yyyy")" data-date-format="dd/mm/yyyy">
                                                            @Html.EditorFor(model => model.DateFirstRequested, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.DateFirstRequested, "", new { @class = "text-danger" })
                                                            <span class=" input-group-btn">
                                                                <button class="btn btn-white add-on" type="button">
                                                                    <i class="fa fa-calendar"></i>
                                                                </button>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <span class="control-label">
                                                            @Html.LabelFor(model => model.RequestorsName, htmlAttributes: new { @class = "control-label" })
                                                        </span>
                                                        <span class="form-control" style="background-color:lightgray">
                                                            @Html.DisplayFor(model => model.RequestorsName, new { htmlAttributes = new { @class = "form-control" } })
                                                        </span>
                                                        @*@Html.LabelFor(model => model.RaisedBy, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.RaisedBy, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.RaisedBy, "", new { @class = "text-danger" })*@
                                                    </div>
                                                    <div class="col-sm-3">
                                                        @Html.LabelFor(model => model.RequestorsTelephoneNumber, htmlAttributes: new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.RequestorsTelephoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.RequestorsTelephoneNumber, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-md-3">
                                                        <span class="control-label">
                                                            @Html.LabelFor(model => model.RequestConfirmed, htmlAttributes: new { @class = "control-label" })
                                                        </span>
                                                        <span class="form-control" style="background-color:lightgray">
                                                            @Html.DisplayFor(model => model.RequestConfirmed, new { htmlAttributes = new { @class = "form-control" } })
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-sm-offset-4">
                                                        <span></span>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        @Html.LabelFor(model => model.RequestorsLocation, "Requestors Location", htmlAttributes: new { @class = "control-label" })
                                                        @Html.DropDownList("RequestorsLocation", null, htmlAttributes: new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.RequestorsLocation, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-md-12">
                                                        @Html.LabelFor(model => model.Requirements, htmlAttributes: new { @class = "control-label" })
                                                        @Html.TextAreaFor(model => model.Requirements, new { @cols = "", @rows = "6", style = "width: 100%", htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Requirements, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-sm-4">

                                                    </div>
                                                </div>
                                            </div>
                                            @*<div class="row">
                                            <div class="form-group">

                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.SupplierName, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.SupplierName, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SupplierName, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.SupplierContactName, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.SupplierContactName, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SupplierContactName, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.SupplierContactDetails, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.SupplierContactDetails, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SupplierContactDetails, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>*@
                                        </div>
                                    </section>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-success" />
                                    @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })*@
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
        <div>
        </div>
    </div>
}

