<!doctype html>
<html lang="">
<head>
    <!-- meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
    <!-- /meta -->
    <title>@ViewBag.Title - Hovis Starters and Leavers</title>
    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/content/bundles/fonts")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- page level plugin styles -->
    <link rel="stylesheet" href="/Content/vendor/offline/theme.css">
    <link rel="stylesheet" href="/Content/vendor/pace/theme.css">
    <!-- /page level plugin styles -->
    <!-- core styles -->
    <link rel="stylesheet" href="/Content/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/css/animate.min.css">
    <!-- /core styles -->
    <!-- template styles -->
    <link rel="stylesheet" href="/Content/css/skins/palette.1.css" id="skin">
    <link rel="stylesheet" href="/Content/css/fonts/style.1.css" id="font">
    <link rel="stylesheet" href="/Content/css/main.css">
    <!-- template styles -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- load modernizer -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<!-- body -->
<body>
    <div class="app">
        <!-- top header -->
        <header class="header header-fixed navbar">
            <div class="brand">
                <a href="javascript:;" class="fa fa-bars off-left visible-xs" data-toggle="off-canvas" data-move="ltr"></a>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand text-white">
                    <i class="fa fa-android mg-r-sm"></i>
                    <span class="heading-font">
                        Starters and Leavers
                    </span>
                </a>
            </div>
            @Html.Partial("_LoginPartial")
        </header>
        <!-- /top header -->
        <section class="layout">
            <!-- sidebar menu -->
            <aside class="sidebar canvas-left">
                <!-- main navigation -->
                <nav class="main-navigation">
                    <ul>
                        <li>
                            <a href="@Url.Action("Index", "Home")">
                                <i class="fa fa-coffee"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("About", "Home")">
                                <i class="fa fa-binoculars"></i>
                                <span>About</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Contact", "Home")">
                                <i class="fa fa-info"></i>
                                <span>Contact</span>
                            </a>
                        </li>
                        <li class="dropdown show-on-hover">
                            <a href="javascript:;" data-toggle="dropdown">
                                <i class="fa fa-bookmark"></i>
                                <span>Log</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Index", "Starter")">
                                        <span>Starter</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Leaver")">
                                        <span>Leaver</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Request")">
                                        <span>Request</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    @if (User.IsInRole("Admin") || User.IsInRole("Site Admin"))
                    {
                        Html.RenderPartial("~/Views/Shared/Navigation/MainNavigation.cshtml");
                        <hr />
                        Html.RenderPartial("~/Views/Shared/Navigation/UserManagementNavigation.cshtml");

                    }
                </nav>
                <!-- /main navigation -->
            </aside>
            <!-- /sidebar menu -->
            <!-- main content -->
            <section class="main-content">
                <!-- content wrapper -->
                @RenderBody()
                <!-- /content wrapper -->
            </section>
            <!-- /main content -->
        </section>
    </div>
    <!-- core scripts -->
    <script src="/Content/vendor/jquery-1.11.1.min.js"></script>
    <script src="/Content/vendor/jquery.easing.min.js"></script>
    <script src="/Content/vendor/jquery.placeholder.js"></script>
    <script src="/Content/vendor/fastclick.js"></script>
    <script src="/Scripts/off-canvas.js"></script>
    <script src="/Scripts/main.js"></script>
    <!-- /core scripts -->
    <!-- page level scripts -->
    
    @RenderSection("scripts", required: false)
    <!-- /page level scripts -->
</body>
<!-- /body -->
</html>